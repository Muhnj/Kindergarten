meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Register Child - Kindergarten System
link(rel="stylesheet", href="/css/registerchild.css")
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

//- Navigation Sidebar
.sidebar
  .sidebar-header
    h2 Kindergarten System
  ul.sidebar-menu
    li
      a(href="/admin")
        i.fas.fa-home
        span Dashboard
    li
      a(href="/addition").active
        i.fas.fa-user-plus
        span Register Child
    li
      a(href="/childrenslist")
        i.fas.fa-users
        span Children List
    li
      a(href="/attendance")
        i.fas.fa-clipboard-check
        span Attendance
    li
      a(href="/reports")
        i.fas.fa-chart-bar
        span Reports
    li
      a(href="/settings")
        i.fas.fa-cog
        span Settings
    li
      a(href="/login")
        i.fas.fa-sign-out-alt
        span Logout

//- Main Content Area
.main-content
  .container
    h1 Register a Child
    form#childRegistrationForm(action="/addition" method="post")
      .form-row
        .form-group
          label(for="childFirstName") Child's First Name:
          input#childFirstName(type="text", name="firstname")
        .form-group
          label(for="childLastName") Child's Last Name:
          input#childLastName(type="text", name="lastname")
      .form-group
        label(for="parentName") Parent/Guardian Name:
        input#parentName(type="text", name="parentname")
      .form-row
        .form-group
          label(for="age") Age:
          input#age(type="number", name="age")
        .form-group
          label(for="class") Class:
          select#class(name="class")
            option(value) Select Class
            option(value="baby") Baby
            option(value="middle") Middle
            option(value="top") Top
      .form-group
        label(for="residence") Residence:
        input#residence(type="text", name="residence")
      .form-group
        label(for="additionalNotes") Additional Notes:
        textarea#additionalNotes(rows="3", style="width: 100%;" name="notes")
      button(type="submit") Register Child